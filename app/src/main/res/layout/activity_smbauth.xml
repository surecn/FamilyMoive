<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lable_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/user"
        android:gravity="right|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_user"
        ></TextView>
    
    <EditText
        android:id="@+id/edit_user"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_pass"
        app:layout_constraintLeft_toRightOf="@id/lable_user"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/lable_pass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/pass"
        android:gravity="right|center_vertical"
        app:layout_constraintTop_toBottomOf="@id/lable_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_pass"
        android:layout_marginTop="10dp"
        ></TextView>

    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/lable_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lable_pass"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>